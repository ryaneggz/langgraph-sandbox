{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to LangGraph",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
        },
        {
            "name": "Debug Python Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/agents/linkedin_leads.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Debug JS Client",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/clients/js/client.mjs",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_OPTIONS": "--inspect",
                "LANGGRAPH_API_URL": "http://localhost:2024"
            }
        }
    ]
}
